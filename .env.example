# Application Configuration

# Server
SERVER_PORT=8080

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=neighborshare
DB_USER=neighborshare_app
DB_PASSWORD=admintest

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-256-bits
JWT_EXPIRATION=900
JWT_REFRESH_TOKEN_EXPIRATION=604800

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY=your_access_key
AWS_SECRET_KEY=your_secret_key
S3_BUCKET=neighborshare-images

# AWS Development (LocalStack)
AWS_ENDPOINT_URL=http://localhost:4566

# Razorpay Payment
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret
RAZORPAY_BASE_URL=https://api.razorpay.com
# Keep true in dev, false in prod
RAZORPAY_MOCK_ENABLED=true

# Email Configuration (SendGrid or similar)
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=your_sendgrid_api_key

# Logging
LOG_LEVEL=INFO
LOG_LEVEL_APP=DEBUG
MANAGEMENT_HEALTH_REDIS_ENABLED=false
MANAGEMENT_HEALTH_MAIL_ENABLED=false

# CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Spring Profiles
SPRING_PROFILES_ACTIVE=dev
